<div class="posts">
  <p class="posts__title">
    投稿一覧
  </p>
  <% @posts.each do |post| %>
    <div class="posts__content">
      <div class="posts__content__left">
        <div class="posts__content__left--image"></div>
      </div>
      <div class="posts__content__right">
        <div class="posts__content__right__top">
          <%= post.user.nickname %>
        </div>
        <div class="posts__content__right__bottom">
          <div class="content__right__bottom--userName">
            <%= link_to post.title, post_path(post.id), class: "content__right__bottom--userName__link" %>
          </div>
          <div class="posts__content__right__bottom--date">
            <%= post.youtube_url %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate(@posts) %>
</div>
<div class="footer">
  <p class="footer__text">
  by.Y
  </p>
</div>